{
  "info": {
    "name": "VLS Hybrid Voice Auth",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register User",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type","value": "application/json"}],
        "url": {"raw": "http://localhost:3000/api/auth/register","protocol":"http","host":["localhost"],"port":"3000","path":["api","auth","register"]},
        "body": {"mode": "raw","raw":"{\n  \"email\": \"voice_test@example.com\",\n  \"password\": \"secure1234\"\n}"}
      }
    },
    {
      "name": "Login User",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type","value": "application/json"}],
        "url": {"raw":"http://localhost:3000/api/auth/login","protocol":"http","host":["localhost"],"port":"3000","path":["api","auth","login"]},
        "body":{"mode":"raw","raw":"{\n  \"email\": \"voice_test@example.com\",\n  \"password\": \"secure1234\"\n}"}
      }
    },
    {
      "name": "Voice Enroll",
      "request": {
        "method": "POST",
        "header": [],
        "url":{"raw":"http://localhost:3000/api/voice-enroll","protocol":"http","host":["localhost"],"port":"3000","path":["api","voice-enroll"]},
        "body":{
          "mode":"formdata",
          "formdata":[
            {"key":"userId","value":"{{userId}}","type":"text"},
            {"key":"passphrase","value":"hello world","type":"text"},
            {"key":"voice","src":"enroll.wav","type":"file"}
          ]
        }
      }
    },
    {
      "name": "Voice Login (Success)",
      "request": {
        "method":"POST",
        "header":[],
        "url":{"raw":"http://localhost:3000/api/voice-login"},
        "body":{
          "mode":"formdata",
          "formdata":[
            {"key":"userId","value":"{{userId}}","type":"text"},
            {"key":"voice","src":"login.wav","type":"file"}
          ]
        }
      }
    },
    {
      "name": "Voice Login (Fail)",
      "request": {
        "method":"POST",
        "header":[],
        "url":{"raw":"http://localhost:3000/api/voice-login"},
        "body":{
          "mode":"formdata",
          "formdata":[
            {"key":"userId","value":"{{userId}}","type":"text"},
            {"key":"voice","src":"fail.wav","type":"file"}
          ]
        }
      }
    }
  ]
}

